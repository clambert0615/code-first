@using Bookwithcodefirst.Context;
@{
    ViewData["Title"] = "UpdateBook";
}
@model Book

<h1>Update Book</h1>
<form action="/Books/UpdateBook" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="text" name="Title" value="@Model.Title" placeholder="@Model.Title" />
    <input type="text" name ="Author" value="@Model.Author" placeholder="@Model.Author" />
    <input type="submit" value="Submit Changes" />
</form>

